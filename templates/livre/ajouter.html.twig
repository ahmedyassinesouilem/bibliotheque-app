{% extends 'base.html.twig' %}

{% block title %}Ajouter un Livre{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>Ajouter un Livre</h1>
        
        {{ form_start(form) }}
            {{ form_row(form.titre) }}
            {{ form_row(form.isbn) }}
            {{ form_row(form.disponible) }}
            {{ form_row(form.image) }}
            {{ form_row(form.auteur) }}
            {{ form_row(form.genre) }}
            <button class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
